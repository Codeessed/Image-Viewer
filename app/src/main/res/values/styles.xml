<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.TextInputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconDrawable">@drawable/text_input_cancel</item>
    </style>
    <style name="Widget.App.PasswordInputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="endIconMode">password_toggle</item>
    </style>
    <style name="Widget.App.NumberInputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <style name="Widget.App.EditTextField" parent="Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
    </style>
    <style name="Widget.App.NumberTextField" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
</resources>